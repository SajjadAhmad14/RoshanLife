<h1 class = 'text-center mt-4'>Sign Up</h1>
<div class = 'container'>
  <div class = 'row justify-content-center'>
    <div class = 'col-10'>
      <%= form_with(model: @user, class: 'shadow p-3 mb-3 bg-success rounded', local: true) do |f|%>
        <div class = 'form-group row'>
          <%= f.label :name, 'User Name', class: 'col-2 col-form-label text-light'%>
          <div class = 'col-10'>
            <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter your name'%>
          </div>
        </div>
        <div class = 'form-group row'>
          <%= f.label :password, class: 'col-2 col-form-label text-light'%>
          <div class = 'col-10'>
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Enter your password'%>
          </div>
        </div>
        <div class = 'form-group row justify-content-center'>
          <%= f.submit 'Sign Up', class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
