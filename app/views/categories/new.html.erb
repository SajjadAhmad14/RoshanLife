<h1 class = 'text-center mt-4'>Create a Category</h1>
<div class = 'container'>
  <div class = 'row justify-content-center'>
    <div class = 'col-10'>
      <%= form_with(model: @category, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f|%>
        <div class = 'form-group row'>
          <%= f.label :name, 'Category name', class: 'col-2 col-form-label text-light'%>
          <div class = 'col-10'>
            <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter name for Category'%>
          </div>
        </div>
        <div class = 'form-group row justify-content-center'>
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
