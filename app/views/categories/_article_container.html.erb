  <div class = 'article-container'>
    <% @articles.each do |article| %>
      <div class = 'box-article d-flex p-0'>
        <div class = 'article-image', style="background-image: url(<%=url_for(article.image)%>)";>
        </div>
        <div class = 'article-text'>
          <h2 class = 'pl-2'><%= link_to article.title, article, class: 'article-head' %></h2>
          <p class = 'article-body pl-2'><%= truncate_body(article) %></p>
          <% if logged_in? && !already_voted?(article) %>
            <%= render 'votes/vote_form', article: article%>
          <% end %>
          <h3 class = 'article-author pb-0 pl-2'>By <%= article.user.name.capitalize %></h3>
        </div>
      </div>
    <% end %>
  </div>