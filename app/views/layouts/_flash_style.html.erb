<% flash.each do |key, msg| %>
  <div class = 'text-center'>
    <% if flash[:error] %>
      <div class="alert alert-danger mb-0"<%= key %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= msg %>
      </div>
    <% else %>
      <div class="alert alert-success mb-0"<%= key %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>
